<UserControl x:Class="Whydoisuck.Views.WindowChromeCommands"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="MinButton"
                Style="{StaticResource WindowMinimizeButton}"
                Click="MinimizeButton_Click"
                Width="50"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Content="Min"/>
        <Button x:Name="MaxButton"
                Style="{StaticResource WindowSizeButton}"
                Click="MaximizeButton_Click"
                Width="50"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Content="Restore"/>
        <Button x:Name="CloseButton"
                Style="{StaticResource WindowCloseButton}"
                Click="CloseButton_Click"
                Width="50"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Content="X"/>
    </StackPanel>
</UserControl>
