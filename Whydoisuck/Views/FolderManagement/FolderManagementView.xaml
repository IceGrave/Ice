<UserControl x:Class="Whydoisuck.Views.FolderManagement.FolderManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views.FolderManagement" xmlns:common="clr-namespace:Whydoisuck.Views.CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <DockPanel x:Name="LevelInfoStack">
            <TextBlock x:Name="ViewTitle"
                       DockPanel.Dock="Top"
                       Text="#Folder management"
                       Style="{StaticResource TitleStyle}"
                       Margin="15,15,15,5"/>
            <StackPanel Orientation="Vertical" 
                        Margin="15">
                <Border Background="{StaticResource PanelBackgroundColor}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                               Text="#Select folders"
                               Style="{StaticResource InfoPanelTitleStyle}"
                               Margin="10"/>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Top">
                            <UniformGrid Rows="1">
                                <Button Margin="10,2,10,2"
                                        Style="{StaticResource DeleteGroupButtonStyle}">#Merge selected</Button>
                                <Button Margin="10,2,10,2"
                                        Style="{StaticResource DeleteGroupButtonStyle}">#Delete selected</Button>
                            </UniformGrid>
                            <common:SearchBar Margin="0,10,0,0"/>
                            <WrapPanel HorizontalAlignment="Center">
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>
                                    <TextBlock FontSize="30" Margin="10">AAAAAAAA</TextBlock>

                                </WrapPanel>

                            
                        </StackPanel>
                    </DockPanel>
                </Border>
                <Border Margin="0,15,0,0"
                        Background="{StaticResource PanelBackgroundColor}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top"
                               Text="#Reorganize folders"
                               Style="{StaticResource InfoPanelTitleStyle}"
                               Margin="10"/>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Top">
                            <TextBlock Style="{StaticResource SettingsSecondaryTextStyle}"
                                       Margin="15,0,15,15">
                                # Resets current folders and reorganize all played levels in new ones
                            </TextBlock>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>
