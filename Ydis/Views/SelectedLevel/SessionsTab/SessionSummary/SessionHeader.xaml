<UserControl x:Class="Ydis.Views.SelectedLevel.SessionsTab.SessionSummary.SessionHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="Ydis.Views.SelectedLevel.SessionsTab.SessionSummary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="0,5,0,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Title"
                       Grid.Row="0"
                       Text="{Binding LevelName}"
                       HorizontalAlignment="Center"
                       FontSize="25"/>
            <TextBlock x:Name="Subtitle"
                       Grid.Row="1"
                       Text="{Binding StartingTime}"
                       HorizontalAlignment="Center"
                       FontSize="20"/>
        </Grid>
    </Border>
</UserControl>
