<UserControl x:Class="Whydoisuck.Views.SelectedLevel.GraphTab.GraphTabMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views.SelectedLevel" xmlns:common="clr-namespace:Whydoisuck.Views.CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="CurrentLevelScrollViewer"
                  Background="{StaticResource AppBackgroundColor}">
        <StackPanel x:Name="LevelInfoStack"
                Orientation="Vertical">

            <common:SessionFilterPanel Margin="15"
                                       DataContext="{Binding Filter}"/>

            <common:LevelGraph Margin="15,0,15,15"
                               DataContext="{Binding Graph}"/>

            <Border Background="{StaticResource PanelBackgroundColor}"
                    Margin="15,5,15,15">
                <common:LevelDatagrid Margin="5"
                                  DataContext="{Binding DataGrid}"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
