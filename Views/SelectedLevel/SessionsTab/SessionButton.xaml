<UserControl x:Class="Whydoisuck.Views.SelectedLevel.SessionsTab.SessionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views.SelectedLevel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Style="{StaticResource SessionButtonStyle}"
            Command="{Binding ViewSessionCommand}"
            HorizontalContentAlignment="Stretch"
            Visibility="{Binding Visibility}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{Binding Time}"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding Start}"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2"
                       Text="{Binding AttemptCount}"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Button>
</UserControl>
