<UserControl x:Class="Whydoisuck.Views.CommonControls.LevelGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <oxy:Plot
        x:Name="LevelPlot"
        Height="500"
        Background="Transparent"
        TitleColor="ForestGreen"
        PlotAreaBorderThickness="1,0,1,1"
        PlotAreaBorderColor="AliceBlue"
        LegendTextColor="Aquamarine">
        <oxy:Plot.Axes>
            <oxy:LinearAxis Position="Bottom"
                            Minimum="0"
                            Maximum="100"
                            IsZoomEnabled="False"/>
            <oxy:LinearAxis Position="Left"
                            Minimum="0"
                            Maximum="100"
                            IsZoomEnabled="False"/>
        </oxy:Plot.Axes>
        <oxy:Plot.Series>
            <oxy:LineSeries
                x:Name="LevelPassRateSeries"
                ItemsSource="{Binding Points}"
                StrokeThickness="4"
                Color="Magenta" 
                MarkerFill="Yellow" 
                MarkerType="Triangle"></oxy:LineSeries>
        </oxy:Plot.Series>
    </oxy:Plot>
</UserControl>
