<UserControl x:Class="Whydoisuck.Views.CommonControls.SessionFilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views.CommonControls"
             xmlns:props="clr-namespace:Whydoisuck.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <CheckBox IsChecked="{Binding ShowNormal, Mode=TwoWay}"
                      Content="{x:Static props:Resources.FilterPanelNormalCheckbox}"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <CheckBox IsChecked="{Binding ShowCopy, Mode=TwoWay}"
                      Content="{x:Static props:Resources.FilterPanelCopyCheckbox}"/>
        </StackPanel>
    </Grid>
</UserControl>
