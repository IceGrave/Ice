<UserControl x:Class="Whydoisuck.Views.Currentlevel.CurrentLevelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Whydoisuck.Views.Currentlevel"
             xmlns:common="clr-namespace:Whydoisuck.Views.CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer 
        x:Name="CurrentLevelScrollViewer">
        <StackPanel x:Name="LevelInfoStack"
                Orientation="Vertical">
            <Border x:Name="TitleBorder"
                Margin="5"
                Background="DarkViolet"
                BorderBrush="PaleVioletRed"
                BorderThickness="1">
                <TextBlock x:Name="LevelTitle">
                TODO Playign : The Hell TODO
                </TextBlock>
            </Border>
            <Border x:Name="GroupAutoguessBorder"
                Margin="5"
                Background="DarkViolet"
                BorderBrush="PaleVioletRed"
                BorderThickness="1">
                <TextBlock x:Name="GroupAutoguess">
                TODO GroupAutoguess : never rated
                </TextBlock>
            </Border>
            <Border x:Name="CurrentLevelGraphBorder"
                Margin="5"
                Background="DarkViolet"
                BorderBrush="PaleVioletRed"
                BorderThickness="1">
                <common:LevelGraph>
                    
                </common:LevelGraph>
            </Border>
            <Border x:Name="CurrentLevelDatagridBorder"
                Margin="5"
                Background="DarkViolet"
                BorderBrush="PaleVioletRed"
                BorderThickness="1">
                <common:LevelDatagrid Height="500">
                    
                </common:LevelDatagrid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
